@inherits MudComponentBase
@inject IStringLocalizer<Users> L
<MudDialog>
    <DialogContent>
        <_UserForm @ref="@_userForm" model="model" superiorList="superiorList" OnFormSubmit="OnFormSubmitHandler"></_UserForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@ButtonText.CANCEL</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">@ButtonText.OK</MudButton>
    </DialogActions>
</MudDialog>

@code {
    private _UserForm? _userForm;
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = default!;
    [Parameter]
    public UserFormModel model { get; set; } = default!;
    [Parameter] 
    public List<UserFormModel> superiorList { get; set; } = new();
    protected async Task Submit() {
        await _userForm!.Submit();
    }
    void Cancel() => MudDialog.Cancel();

    protected  Task OnFormSubmitHandler(UserFormModel model)
    {
        MudDialog.Close(DialogResult.Ok(model));
        return Task.CompletedTask;
    }
}
